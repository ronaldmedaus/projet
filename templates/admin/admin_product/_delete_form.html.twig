<form method="post" action="{{ path('admin/product_delete', {'id': product.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce produit?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn  btn-labeled btn-danger"><span class="btn-label"><i class="fa fa-remove"></i></span>Supprimer</button>
</form>
