{% extends "base.html.twig" %}

{% block body %}

  <section>
  <div class="container py-5">
      <div class="row">
        <div class="col-12">
          <h3 class="text-center">Blog</h3>
        </div>  

      
         {% for post in posts %}

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="card">
                    <img src="{{ post.imagePath }}" class="card-img-top imageCard" alt="image_category">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        {{ post.content | raw}}
                        <a href="{{ path('blog_post_show',{'id': post.id }) }}" class="btn btn-primary w-100">Consulter</a>
                    </div>
                </div>
        
            </div>
            
        {% endfor %}

    </div>
     </div>
  </section>
   


{% endblock %}