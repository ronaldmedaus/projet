{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<div class="container col-6">
		{% include "_messages_flash.html.twig" %}


		<div class="row">
			<div class="col-12 text-center contactBg">
				<h1>Nous contacter</h1>
				<h4>Contacter notre Ã©quipe pour en savoir plus sur FFR</h4>
			</div>


			<div class="contact-form mb-2">

				<div class="form-group justify-content-center">

					{{ form_start(form) }}
					{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

				</div>

				<div class="row">
					<div class="form-group col-6">
						{{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
					</div>


					<div class="form-group col-6">
						{{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">

					{{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					<input type="submit" value="Nous faire parvenir" class="btn btn-primary py-3 px-5 w-100">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>


{% endblock %}
